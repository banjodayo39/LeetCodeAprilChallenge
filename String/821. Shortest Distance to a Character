class Solution {
    func shortestToChar(_ s: String, _ c: Character) -> [Int] {
        
        var prev = Int.min/2
        var chars = Array(s)
        var results = [Int]()
        
        for i in 0..<chars.count{
            if chars[i] == c{
                prev = i
            }
            results.append(i - prev)
        }
        
        prev = Int.max/2
        
        for i in stride(from: chars.count - 1, through: 0, by : -1){
            if chars[i] == c{
                prev = i
            }
            results[i] = min(prev - i, results[i])
        }
        
        return results
    }
}
